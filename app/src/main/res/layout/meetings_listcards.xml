<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/static_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_18sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/empty_card"
            android:layout_width="580dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:cardBackgroundColor="@color/emptycardcolor"
            app:cardCornerRadius="15dp"
            app:cardElevation="7dp">


        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/emptycard_redborder"
        android:gravity="center">

        <TextView
            android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/_5sdp"
            android:text="Busy"
            android:textColor="@color/red"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="430dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/emptycard_border"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/m_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:text="10:00 PM"
            android:textAlignment="textEnd"
            android:textColor="@color/app_tcolor"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="to"
            android:textColor="@color/app_tcolor"
            android:textSize="@dimen/_20ssp" />


        <TextView
            android:id="@+id/m_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:text="11:00 PM"
            android:textColor="@color/app_tcolor"
            android:textSize="@dimen/_20ssp" />

    </LinearLayout>

</LinearLayout>